<Alloy>
	
	<View class="viewHome" id="viewHome">
		
		<ScrollView   class="scrollableHomeSlider"   showPagingControl="false" id="scrollableHomeSlider" >
			
			<View class="viewRoundedContainerLogo" id="viewRoundedContainerLogo">
				<ImageView image="/images/bigLogo.png" class="imageBigLogo"></ImageView>
			</View>
			
			<View class="viewRoundedContainerTraffic" id="viewRoundedContainerTraffic" visible="false">	
				<View class="viewTraffic" id="viewTraffic">
					<ImageView image="/images/trafficGreen.png" class="iconTraffic" id="trafficGreen"></ImageView>
					<ImageView image="/images/trafficOrange.png" class="iconTraffic" id="trafficOrange"></ImageView>
					<ImageView image="/images/trafficRed.png" class="iconTraffic" id="trafficRed"></ImageView>
				</View>
				<View class="viewAlert" id="viewAlert">
					<Label class="textAlert" id="textAlert" ></Label>
				</View>		
			</View>
		
		</ScrollView>
		
	</View>
	
</Alloy>